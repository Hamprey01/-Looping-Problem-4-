#include <stdio.h>

int main() {
   int i, k, rows, space, j, add = 1;
    printf("enter a number of rows:");
    scanf("%d", &rows);
    // limit of rows
    space = rows + 5 - 1;
    
    for(i = 1; i <= rows; i++){
        // space of row will be lessen until the end of the rows given
        for(k = space; k >= 1; k--){
            printf(" ");
        }
        // number will stop until the given rows reach
        for(j = 1; j <= i; j++)
        printf("%d", add++);
        printf("\n");
        // first number will attach to given space
        space--;
    }
    
    return 0;
}
